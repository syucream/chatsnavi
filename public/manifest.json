{
  "manifest_version": 3,
  "name": "ChatsNavi",
  "version": "1.0",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "permissions": [
    "activeTab",
    "tabs",
    "contextMenus",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://gemini.google.com/*"
  ],
  "icons": {
    "48": "48x48.png",
    "128": "128x128.png"
  }
}
